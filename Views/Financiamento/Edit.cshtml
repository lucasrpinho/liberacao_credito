@model liberacao_credito.Models.Financiamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edição</h1>

<h4>Financiamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="CPF" class="control-label"></label>
                <select asp-for="CPF" class="form-control" asp-items="ViewBag.CPF"></select>
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ValorTotal" class="control-label">Valor Total</label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DataVencimentoUltimo" class="control-label"> Data do Último Vencimento</label>
                <input asp-for="DataVencimentoUltimo" class="form-control" />
                <span asp-validation-for="DataVencimentoUltimo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TipoCreditoId" class="control-label"> Tipo de Crédito</label>
                <select asp-for="TipoCreditoId" class="form-control" asp-items="ViewBag.TipoCreditoId"></select>
                <span asp-validation-for="TipoCreditoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
